@model IEnumerable<RNM_CHITFUND.ViewModels.EnrollCustListVM>

@{
    ViewBag.Title = "GetEnrollList";
}

<h2>:: Enroll List ::</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
</p>
<table class="table">
    <tr class="bg-info">
        <th>
            @Html.DisplayNameFor(model => model.EnrollCustList.Enroll_ID)
        </th>
        <th>
            @Html.DisplayName("Customers ID")
        </th>
        <th>
            @Html.DisplayName("Customer Name")
        </th>
        <th>
            @Html.DisplayName("Surname")
        </th>
        <th>
            @Html.DisplayName("Chitt ID")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnrollCustList.IsLifted)
        </th>
