    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollCustList.Enroll_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customers.Cust_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customers.Cust_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customers.Cust_Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollCustList.Chitt_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollCustList.IsLifted)
            </td>
            <td>
                @Html.ActionLink("Pay Auction Amount", "PayAuctionAmount", "Payment", new { id = item.EnrollCustList.Enroll_ID }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Details", "Details", new { id = item.EnrollCustList.Enroll_ID }, new { @class = "btn btn-success" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EnrollCustList.Enroll_ID }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
