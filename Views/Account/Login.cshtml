@model RNM_CHITFUND.Models.Membership

@{
    ViewBag.Title = "Login";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="row">
    <div class="col-lg-6">
        <div>
            <div>
                <img src="~/Content/Images/1.png" style="width:700px;height:500px;" />
            </div>
        </div>
    </div>
    <div class="col-md-5">
        <div class="form-horizontal login-div">
            <div class="form-group" align="center">
                @Html.Label("Log In", htmlAttributes: new { @class = "control-label" })
            </div>

            <div class="form-group">
                @Html.Label("User Name", htmlAttributes: new { @class = "control-label col-md-3 text-black" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-3 text-black" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-8">
                    <input type="submit" value="Login" class="btn btn-primary col-md-12" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-8">                    
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })                   
                </div>
            </div>            

            <div class="form-group">
                <div class="col-md-offset-3 col-md-8">
                    <p class="small fw-bold mt-2 pt-1 mb-0">
                        Don't have an account?
                        <b>
                            @Html.ActionLink("Click to Signup", "Signup")
                        </b>
                    </p>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-8">
                    <b>
                        @Html.ActionLink("Forgot Password", "", "", new { @class = "text-black" })
                    </b>
                </div>
            </div>
        </div>
    </div>
</div>


}





